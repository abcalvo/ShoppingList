<h3>Productos</h3>

<div class='table-responsive'>
  <table class='table-striped'>
    <tbody>
      <% @products.each do |product| %>
      <tr class='product'>
        <td class='col-xs-12'>
          <%= product.name %>
        </td>
        <td class='item-in-list'><%= link_to edit_product_path(product) do %> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><% end %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
