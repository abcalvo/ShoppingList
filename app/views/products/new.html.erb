<h3 class='title'>Nuevo producto</h3>

<%= form_for :product, url: products_path do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <%= f.hidden_field :from_edit, :value => @from_edit %>
  <%= f.hidden_field :list, :value => @list %>

  <%= f.submit "Crear nuevo producto", class: 'btn btn-primary' %>
  <%= link_to "Cancelar", :back, {:class=>"btn btn-default"} %>
<% end %>
